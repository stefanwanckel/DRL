<?xml version="1.0" encoding="utf-8"?>
<mujoco>
	<compiler angle="radian" coordinate="local" meshdir="../stls" texturedir="../textures"></compiler>
	<option timestep="0.002">
		<flag warmstart="enable"></flag>
	</option>

	<include file="shared_RG2.xml"></include>
	
	<worldbody>
		<body name="floor0" pos="0. 0. 0.">
			<geom name="floor0" size="4 4 1" type="plane" condim="3" material="floor_mat"></geom>	
		</body>

		<include file="robot_RG2.xml"></include>

		<body name="object0" pos="0 0 0" euler="0 0 -0.6">
			<joint name="object0:joint" type="free" damping="5"></joint>
			<geom size="0.025 0.025 0.025" pos="-0.5270866 0.33075274 0.51" type="box" condim="3" name="object0" material="block_mat" mass="0.2"  solimp="0.99 0.999 0.01" solref="0.01 1"></geom>
			<site name="object0" pos="-0.5270866 0.33075274 0.51" size="0.02 0.02 0.02" rgba="1 1 0 1" type="sphere"></site>
		</body>
		<body pos="-0.3270866  0.48075274 0.25" euler="0 0 -0.6" name="table0">
			<geom size="0.25 0.35 0.25" type="box" mass="2000" material="table_mat"   solimp="0.99 0.999 0.01" solref="0.01 1"></geom>
			<site name="target0" pos="-0.44 0.34 0.5" size="0.02 0.02 0.02" rgba="1 0 0 1" type="sphere"></site>
		</body>

		<light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 0 4" dir="0 0 -1" name="light0"></light>
	</worldbody>
	
	<actuator>
		<!-- The Actuators still need adapting to the motion of the rg2 -->
		<!-- Note the required motion:
		no trusses are included because it is not possible to have 3 bodies connected via 2 joints. 
		The real actuators are r_moment_arm_actuator and l_moment_arm_actuator
		However, to maintain the gripper fingers parallel to each other, the r_finger_actuator and l_finger_actuator 
		have to be turned into the opposite direction of the respective real actuator. 
		This kinematic behaviour would have been enforced by the trusses, which are missing... -->

		<position ctrllimited="true" ctrlrange="-1.55 1.55" joint="r_finger_joint"         kp="1000" name="r_finger_actuator" user="1"></position>
		<position ctrllimited="true" ctrlrange="-1.55 1.55" joint="l_finger_joint"         kp="1000" name="l_finger_actuator" user="1"></position>
		<position ctrllimited="true" ctrlrange="-1.55 1.55" joint="right_moment_arm_joint" kp="1000" name="r_moment_arm_actuator" user="1"></position>
		<position ctrllimited="true" ctrlrange="-1.55 1.55" joint="left_moment_arm_joint" kp="1000" name="l_moment_arm_actuator" user="1"></position>
	</actuator>
</mujoco>